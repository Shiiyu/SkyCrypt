{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "worker": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "curly": ["warn", "multi-line", "consistent"],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-constant-condition": ["error", { "checkLoops": false }]
  }
}
